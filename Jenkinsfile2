#!/usr/bin/env groovy

@Library('shared-library@master') _ //master or whatever branch

pipeline{

      agent any
      
        
        stages{

              stage('maven build'){
                  steps{
		  def mavenHome =  tool name: "maven3.6.3", type: "maven"
                  def mavenCMD = "${mavenHome}/bin/mvn"
                      script{
		    	                sh "${mavenCMD} clean install"
                      	  }
               	     }  
                 }	
                 
                 stage ('Check logs') {
                    steps {
                        filterLogs ('WARNING', 1)
                    }
                }
		
           }	       	     	         
}
